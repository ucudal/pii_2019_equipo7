    <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Birth Data</th>
            <th>Awards</th>
        </tr>

        @foreach (var item in Model.Propuesta.Tecnicos)
        {
            string selectedRow = "";
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Close", "OnGetAsync",
                                  new { tecnicoID = item.ID })
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.BirthDate
                </td>
            </tr>
        }
    </table>
}